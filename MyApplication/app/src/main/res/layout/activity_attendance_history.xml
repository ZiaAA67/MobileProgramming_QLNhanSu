<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AttendanceHistory">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/light_sea_green">

        <FrameLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <Button
                android:id="@+id/btn_back"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="start|center_vertical"
                android:backgroundTint="@color/light_sea_green"
                android:drawableLeft="@drawable/arrow_back"
                android:gravity="center" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Lịch Sử Chấm Công"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_background"
            android:backgroundTint="@color/lavender"
            android:gravity="center|top"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topBar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_pass_background"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="11dp"
                android:paddingVertical="7dp">

                <ImageView
                    android:id="@+id/btnPreviousWeek"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_background"
                    android:contentDescription="Previous Week"
                    android:padding="5dp"
                    android:src="@drawable/arrow_left" />

                <TextView
                    android:id="@+id/tvWeek"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Tuần Này"
                    android:textColor="@color/light_black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/btnNextWeek"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_background"
                    android:contentDescription="Next Week"
                    android:padding="5dp"
                    android:src="@drawable/arrow_right" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/white"
                android:elevation="4dp"
                app:cardCornerRadius="20dp">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <TextView
                            android:id="@+id/tv_workday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/calendar"
                            android:paddingStart="10dp"
                            android:drawablePadding="10dp"
                            android:drawableTint="@color/light_sea_green"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:text="29/11/2024" />
                    </TableRow>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_weight="1"
                        android:background="@color/gray" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <TextView
                            android:id="@+id/tv_check_out"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/time"
                            android:drawablePadding="10dp"
                            android:drawableTint="@color/light_sea_green"
                            android:paddingStart="10dp"
                            android:text="22:00"
                            android:textSize="15dp"
                            tools:ignore="TextSizeCheck" />

                        <TextView
                            android:id="@+id/tv_department_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/workplace"
                            android:drawablePadding="10dp"
                            android:drawableTint="@color/light_sea_green"
                            android:text="Mã Phòng Ban " />

                        <TextView
                            android:id="@+id/tv_department_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tên Phòng Ban" />
                    </TableRow>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_weight="1"
                        android:background="@color/gray" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        >

                        <TextView
                            android:id="@+id/tv_check_in"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/time"
                            android:paddingStart="10dp"
                            android:drawablePadding="10dp"
                            android:drawableTint="@color/light_sea_green"
                            android:text="14:00"
                            android:textSize="15dp"
                            tools:ignore="TextSizeCheck"/>

                        <TextView
                            android:id="@+id/tv_department_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/workplace"
                            android:drawablePadding="10dp"
                            android:drawableTint="@color/light_sea_green"
                            android:text="Mã Phòng Ban "
                            tools:ignore="DuplicateIds" />

                        <TextView
                            android:id="@+id/tv_department_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tên Phòng Ban"
                            tools:ignore="DuplicateIds"/>
                    </TableRow>

                </TableLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
