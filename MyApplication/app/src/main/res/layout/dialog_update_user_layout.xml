<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/white_bg_radius_16"
    android:layout_margin="16dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/light_green_bg_top_left_top_right_radius_16"
        android:text="Cập Nhật Thông Tin"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:padding="10dp"
        android:textAlignment="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="4dp"
            android:text="Tên tài khoản:"/>
        <EditText
            android:id="@+id/edt_username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:paddingHorizontal="20dp"
            android:background="@drawable/lightlightgrey_background_lightgrey_border"
            android:hint="Tên tài khoản"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="16dp"
            android:text="Vai trò:"/>
        <Spinner
            android:id="@+id/spinner_role"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/lightlightgrey_background_lightgrey_border"
            android:drawableTint="@color/black"
            android:paddingHorizontal="12dp"
            android:textSize="15sp"/>
        <!--        <SearchView-->
        <!--            android:id="@+id/search_view"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="50dp"-->
        <!--            android:background="@drawable/lightlightgrey_background_lightgrey_border"-->
        <!--            android:queryHint="Tìm kiếm ..."-->
        <!--            android:layout_marginTop="16dp"-->
        <!--            android:iconifiedByDefault="false"/>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">
            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/dis_approve"
                android:text="Huỷ"/>
            <Button
                android:id="@+id/btn_update"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/approve"
                android:layout_marginLeft="20dp"
                android:text="Cập nhật"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>